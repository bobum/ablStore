<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
	<title>ABL BarryBuck Store</title>
	<link rel="stylesheet" href="css/style.css" type="text/css" media="all" />
	<link rel="stylesheet" href="css/jquery.modal.min.css" type="text/css" media="screen" />
	<!--[if lte IE 6]>
		<style type="text/css" media="screen">
			.tabbed { height:420px; }
		</style>
	<![endif]-->
	
	<script src="js/jquery-1.4.1.min.js" type="text/javascript"></script>
	<script src="js/jquery.jcarousel.pack.js" type="text/javascript"></script>
	<script src="js/jquery.slide.js" type="text/javascript"></script>
	<script src="js/jquery.modal.min.js" type="text/javascript"></script>
	<script src="js/jquery-func.js" type="text/javascript"></script>
	
</head>
<body>
<!-- Top -->
<div id="top">
	
	<div class="shell">
		
		<!-- Header -->
		<div id="header">
			<h1 id="logo"><a href="#">Barry Bucks</a></h1>
			<div id="navigation">
				<ul>
				    <li><a href="/">Home</a></li>
					<!--<li><a href="#">Support</a></li>
					<li><a href="#">My Account</a></li>
					<li><a href="#">The Store</a></li>
					<li><a href="#">Contact</a></li>-->					
						<% if (!user) { %>
						<li class="last"><span id="loginLink"><a>Log In</a></span></li>
						<% } else { %>
						<li class="last"><a href="/profile"><%= user.username %></a>: $<span id="userBalance"><%= user.balance %></span></li>
						<% } %>
				</ul>
			</div>
		</div>
		<!-- End Header -->
		
		<!-- Slider -->
		<div id="slider">
			<div id="slider-holder">
				<ul>
				    <li><a href="#"><img src="css/images/slide1.jpg" alt="" /></a></li>
				    <li><a href="#"><img src="css/images/slide2.jpg" alt="" /></a></li>
				    <li><a href="#"><img src="css/images/slide1.jpg" alt="" /></a></li>
				    <li><a href="#"><img src="css/images/slide2.jpg" alt="" /></a></li>
				    <li><a href="#"><img src="css/images/slide1.jpg" alt="" /></a></li>
				    <li><a href="#"><img src="css/images/slide2.jpg" alt="" /></a></li>
				</ul>
			</div>
			<div id="slider-nav">
				<a href="#" class="prev">Previous</a>
				<a href="#" class="next">Next</a>
			</div>
		</div>
		<!-- End Slider -->
		
	</div>
</div>
<!-- Top -->

<!-- Main -->
<div id="main">
	<div class="shell">
		
		<!-- Search, etc -->
		<div class="options">
			<!--<div class="search">
				<form action="" method="post">
					<span class="field"><input type="text" class="blink" value="SEARCH" title="SEARCH" /></span>
					<input type="text" class="search-submit" value="GO" />
				</form>
			</div>
			<span class="left"><a href="#">Advanced Search</a></span>
			
			<div class="right">
				<span class="cart">
					<a href="#" class="cart-ico">&nbsp;</a>
					<strong>$0.00</strong>
				</span>
				<span class="left more-links">
					<a href="#">Checkout</a>
					<a href="#">Details</a>
				</span>
			</div>-->
		</div>
		<!-- End Search, etc -->
		
		<!-- Content -->
		<div id="content">
			
			<!-- Tabs -->
			<div class="tabs">
				<ul>
					<% for(var i=0; i<categories.length; i++) {%>
	   				<li><a href="#"><span><%= categories[i] %></span></a></li>
					<% } %>				    
				</ul>
			</div>
			<!-- Tabs -->
			
			<!-- Container -->
			<div id="container">				
				<div class="tabbed">
					<% for(var i=0; i<categories.length; i++) {%>
						<div class="tab-content">
							<div class="items">
								<div class="cl">&nbsp;</div>
								<ul>
								<% for(var j=0; j<items.length; j++) {%>
									<% if (items[j].category == categories[i]) { %>
										<li>
								    	<div class="image">
								    		<a href="#"><img src="css/images/image1.jpg" alt="" /></a>
								    	</div>
								    	<p>
								    		Description: <span><%= items[j].description %></span><br />
								    		<% if (items[j].other) { %>
								    		Other Info : <span><%= items[j].other %></span><br />
								    		<% } %>
								    		<% if (items[j].more) { %>
								    		MORE Info : <span><%= items[j].more %></span>
								    		<% } %>
								    	</p>
								    	<% if (user && items[j].amount <= user.balance) { %>
									    	<p class="price">Buy It Now: <strong>
									    		<a href="#" class="buyNow" 
									    			description="<%= items[j].description %>" 
									    			amount="<%= items[j].amount %>" 
									    			balance="<%= user.balance %>"
									    			username="<%= user.username %>">
									    			<%= items[j].amount %> $BB</a>
									    		</strong>
									    	</p>
									    <% } else { %>
									    	<p class="price">Price: <strong style="opacity:0.5;"><%= items[j].amount %> $BB</strong></p>
								    	<% } %>
								    </li>
									<% } %>
								<% } %>
								</ul>
								<div class="cl">&nbsp;</div>
							</div>
						</div>
					<% } %>					
				</div>
				
				<!-- Brands 
				<div class="brands">
					<h3>Brands</h3>
					<div class="logos">
						<a href="#"><img src="css/images/logo1.gif" alt="" /></a>
						<a href="#"><img src="css/images/logo2.gif" alt="" /></a>
						<a href="#"><img src="css/images/logo3.gif" alt="" /></a>
						<a href="#"><img src="css/images/logo4.gif" alt="" /></a>
						<a href="#"><img src="css/images/logo5.gif" alt="" /></a>
					</div>
				</div>-->
				<!-- End Brands -->
				
				<!-- Footer -->
				<div id="footer">
					<div class="left">
						<a href="#">Home</a>
						<span>|</span>
						<!--<a href="#">Support</a>
						<span>|</span>
						<a href="#">My Account</a>
						<span>|</span>
						<a href="#">The Store</a>
						<span>|</span>
						<a href="#">Contact</a>
						<span>|</span>-->
						<% if (!user) { %>
						<a href="/login">Log In</a>
						<% } else { %>
						<a href="/profile"><%= user.username %></a>
					<% } %>
					</div>
					<div class="right">
						&copy; BarryBucks Site Design by <a href="http://chocotemplates.com" target="_blank" title="CSS Templates">ChocoTemplates.com</a>  Loving crafted by Dallas GM Scott Davis
					</div>
				</div>
				<!-- End Footer -->
				
			</div>
			<!-- End Container -->
			
		</div>
		<!-- End Content -->
		
	</div>
</div>
<!-- End Main -->
	<div id="purchase-form" class="modal">
		You are about to purchase the following:
		<ul style="font-weight:bold;padding:10px;">
			<li id="purchase" ></li>
			<li>For $<span id="purchaseAmount"></span></li>
		</ul>
		You will have <span id="remaining" style="font-weight:bold;"></span>BB left once you click the BUY NOW button.<br />
		If you don't want to complete this transaction, just close this window.<br />
		<p style="padding:10px;"> Do you want to proceed?</p>
		
		<button id="buyNowButton">BUY NOW!</button>
	</div>
	<div id="loginForm" class="modal">
		<form action="/login" method="post">
			<div style="float:left;">
				<div style="padding: 10px;">
					<label>Username:</label>
					<input type="text" name="username"/><br/>
				</div>
				<div style="padding: 10px;">
					<label>Password:</label>
					<input type="password" name="password"/>
				</div>
			</div>
			<div style="padding-top: 50px;">
				<input type="submit" value="LOGIN"/>
			</div>
		</form>
	<div>	
	<div id="loginResult"></div>
	</div>
</form>
</body>
</html>
